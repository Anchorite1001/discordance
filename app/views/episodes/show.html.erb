<h1 class = 'text-center'><%= @episode.title %></h1>

<% if @episode.speakers != nil %>
  <h3 class = 'text-center'>Speakers: |
    <% @episode.speakers.each do |speaker| %>
      <%= speaker.name %> |
    <% end %>
  </h3>
<% end %>

<% if @current_user.present? && @current_user.admin? %>
  <div class="text-center">
    <div class="btn-group mt-3 mb-3">
      <%= link_to "Edit Episode", edit_episode_path(@episode), :class => 'btn btn-info mr-2'%>
      <%= button_to "Delete Episode", episode_path(@episode), :method => 'delete', :class => 'btn btn-danger' %>
    </div>
  </div>
<% end %>

<% if @episode.player != nil %>
  <div class = 'player'>
    <%= raw @episode.player %>
  </div>
<% end %>

<div class="like-button text-center">
  <%= button_to 'Like This Episode', add_episode_path(@episode), :method => 'get', :class => 'btn btn-outline-success btn-lg mb-3 text-center' %>
</div>

<% if @episode.introduction != nil %>
  <div class="episode-intro">
  <%= simple_format(@episode.introduction) %>
  </div>
<% end %>
