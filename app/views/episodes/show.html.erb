<h1><%= @episode.title %></h1>

<%= button_to 'Like This Episode', add_episode_path(@episode), :method => 'get', :class => 'btn btn-outline-success btn-lg mb-3' %>

<% if @current_user.present? && @current_user.admin?%>
  <%= link_to "Edit Episode", edit_episode_path(@episode) %>
  <%= button_to "Delete Episode", episode_path(@episode), :method => 'delete' %>
<% end %>

<% if @episode.player != nil %>
  <%= raw @episode.player %>
<% end %>

<p>Introduction forthcoming...</p>

