<%= form_for @episode, :html => {:class => 'admin-form'} do |f| %>

  <%= f.label :title, :class => 'form-label' %>
  <%= f.text_field :title, :class => 'form-control' %>

  <%= f.label :image, :class => 'form-label' %>
  <%= f.text_field :image, :class => 'form-control' %>

  <%= f.label :player, :class => 'form-label' %>
  <%= f.text_field :player, :class => 'form-control' %>

  <%= f.label :introduction, :class => 'form-label' %>
  <%= f.text_area :introduction, :class => 'form-control', :rows => '6' %>

  <%= f.submit class: 'btn btn-outline-primary mt-2' %>

<% end %>
