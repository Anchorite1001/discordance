<% if @current_user.episodes != nil %>
  <div class="card-group">
    <% @current_user.episodes.each do |ep| %>
    <div class="card col-sm-4 shadow">
      <h5 class="card-header"><%= link_to ep.title, episode_path(ep) %></h5>
      <div class="card-body">
        <% if ep.player != nil %>
          <%= raw ep.player %>
        <% else %>
          <h5 class='mt-3 mb-5'>New episode comes in the next few days...</h5>
          <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
          </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
