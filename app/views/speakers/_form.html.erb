<%= form_for @speaker, :html => {:class => 'admin-form'} do |f| %>

  <%= f.label :name, :class => 'form-label' %>
  <%= f.text_field :name, :class => 'form-control' %>

  <%= f.label :host_or_guest, :class => 'form-label' %>
  <%= f.text_field :host_or_guest, :class => 'form-control' %>

  <%= f.label :image, :class => 'form-label' %>
  <%= f.text_field :image, :class => 'form-control' %>

  <%= f.label :introduction, :class => 'form-label' %>
  <%= f.text_area :introduction, :class => 'form-control', :rows => '6' %>

  <%= f.submit class: 'btn btn-outline-primary mt-2'%>
<% end %>
