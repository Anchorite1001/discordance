
<% if flash[:error].present? %>
<div class="alert alert-warning mt-3" role = 'alert'>
  <h4>â€¢ <%= flash[:error] %></h4>
</div>
<% end %>

<div class="container-sm">
  <%= form_tag login_path, :class => 'real-form' do %>

    <h1>Sign In
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="35" fill="currentColor" class="bi bi-signpost-split" viewBox="0 0 16 16">
  <path d="M7 7V1.414a1 1 0 0 1 2 0V2h5a1 1 0 0 1 .8.4l.975 1.3a.5.5 0 0 1 0 .6L14.8 5.6a1 1 0 0 1-.8.4H9v10H7v-5H2a1 1 0 0 1-.8-.4L.225 9.3a.5.5 0 0 1 0-.6L1.2 7.4A1 1 0 0 1 2 7h5zm1 3V8H2l-.75 1L2 10h6zm0-5h6l.75-1L14 3H8v2z"/>
      </svg>
    </h1>

    <div class="mb-3">
      <%= label_tag :email, nil, :class => 'form-label' %>
      <%= email_field_tag :email, nil, :class => 'form-control' %>
    </div>

    <div class="mb-3">
      <%= label_tag :password, nil, :class => 'form-label' %>
      <%= password_field_tag :password, nil, :class => 'form-control' %>
    </div>

    <%= submit_tag "Sign In", :class => 'btn btn-outline-primary' %>

  <% end %>
</div>
